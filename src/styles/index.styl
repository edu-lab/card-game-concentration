@import 'nib'
@import './font-awesome.css'
@import './font-cat-icons.css'

align-left-margin = 50px

shadow-light-gray = rgba(0,0,0,.1)
disabled-dark-gray = rgba(0,0,0,.5)

important-green = #5BDCAC
important-red = #E34B4B

*
  box-sizing border-box

body
  font-size 14px
  font-weight 300
  font-family Avenir, Helvetica, sans-serif
  color rgb(30,30,30)
  background url('/assets/bg.png') fixed #efefef
    
p
  margin 0

a
  text-decoration none
  outline 0
  color rgba(0,0,0,.4)
  transition all .3s
  cursor pointer
  &, &:active, &:focus
    outline none
  &:hover
    color #000

ul
  padding 0
  margin 0
  list-style-type none

button
  border none
  &, &:active, &:focus
    outline none

.hide-sm
  @media screen and (max-width: 700px)
    display none

.card
  float left
  min-width 200px
  margin 50px 0 0 align-left-margin
  padding 10px 10px
  border-radius 1px
  background-color #fff
  box-shadow 0 2px 1px shadow-light-gray
  @media screen and (max-width: 700px)
    width 100%
    margin 0 0 20px 0 

.board
  display none

.card__row
  position relative
  width 100%
  height 60px
  line-height 30px
  padding 15px
  border-bottom 1px dashed shadow-light-gray
  transition all .3s
  &:last-of-type
    border-bottom none
  .fa
    min-width 15px
    margin-right 15px
  span
    position inherit
    z-index 1
    display inline-block
    border-radius 2px
  @media screen and (max-width: 700px)
    float left
    width 20%
    padding 5px
    line-height 50px
    border-bottom none
    .fa
      min-width 0
      margin-right 5px

.card__row--filled
  padding 0
  @media screen and (max-width: 700px)
    width 40%

.row-timer
  position absolute
  z-index 0
  top 0
  left 0
  height 100%
  width 0
  background-color shadow-light-gray
  transition all .2s

.card__column
  float left
  line-height 60px
  width 25%
  height 100%

.card__column--wide
  width 50%

button.card__column
  font-size 30px
  text-align center
  color #fff
  background-color important-green
  border 1px 1px solid important-green
  box-shadow inset 0 -2px 0 shadow-light-gray
  cursor pointer
  transition all .2s
  text-shadow 0 1px 0 shadow-light-gray
  &:hover,
  &:disabled
    box-shadow inset 0 -60px 0 shadow-light-gray
  &:disabled
    cursor default
    color shadow-light-gray
    text-shadow none
  .fa
    margin-right 0

.board
  position relative
  overflow hidden
  input[type="checkbox"]
    display none

.board__row
  overflow hidden  
  width 100%

input[type=checkbox] + .board__column
  text-align center
  font-size 24px
  width 50px
  height 50px
  line-height 50px
  float left
  cursor pointer
  margin 1px
  border 1px dashed shadow-light-gray
  transition all .3s
  .board__column-wrapper
    transition transform .3s
    transform scaleX(0)
  &:hover
    background-color shadow-light-gray

input[type=checkbox]:checked + .board__column
  .board__column-wrapper
    transform scaleX(1)

input[type=checkbox]:disabled + .board__column
  cursor default
  &:hover
    background-color #fff
  .board__column-wrapper
    transform scaleX(1)
    opacity 0.5

.footer
  font-size 12px
  position fixed
  bottom 15px
  left align-left-margin
  z-index -1

.animated-highlight
  animation anim-highlight .5s

@keyframes anim-highlight
    0%,100% 
      background-color none
    50%
      color #fff
      background-color important-red

.animated-up
  animation anim-up ease .5s

@keyframes anim-up
    0%,100% 
      transform translateY(0) rotate(0)
    50%
      color #fff
      transform translateY(-5px) rotate(10deg)
